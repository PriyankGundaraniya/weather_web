    <script>
        var currentday = () => {
            let weekday = new Array(7)
            
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednsday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            var today = new Date(); 
            var days = weekday[today.getDay()];
          
            var day = document.getElementById('day')
            day.innerHTML = days;

        }

        currentday();

        var getCurrentTime = () =>{
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec",
                ];

                var now = new Date();
                
                var date = now.getDate() + ' ' +  months[now.getMonth() ];;

                var todayDate = document.getElementById('today_date');
                todayDate.innerHTML = date;
        }    

        getCurrentTime();
    </script>
